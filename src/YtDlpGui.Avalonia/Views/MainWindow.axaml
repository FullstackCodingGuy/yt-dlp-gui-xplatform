<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:YtDlpGui.AvaloniaApp.ViewModels"
        x:Class="YtDlpGui.AvaloniaApp.MainWindow"
        Title="Professional Media Downloader"
        Width="1000" Height="650"
        MinWidth="800" MinHeight="500"
        Background="#1E1E1E"
        mc:Ignorable="d">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="16">
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,16">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="🎥 Professional Media Downloader" 
                          Classes="title"
                          FontSize="26" 
                          FontWeight="Bold"
                          Foreground="#FFFFFF"/>
                <TextBlock Text="High-quality downloads with advanced controls" 
                          Classes="subtitle"
                          FontSize="14" 
                          Foreground="#9CA3AF"
                          Margin="0,4,0,0"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <Button Content="⚡ Start All" 
                        Classes="success compact"
                        Command="{Binding StartAllCommand}"/>
                <Button Content="⏸️ Pause All" 
                        Classes="warning compact"
                        Command="{Binding PauseAllCommand}"/>
                <Button Content="🧹 Clear" 
                        Classes="danger compact"
                        Command="{Binding ClearCompletedCommand}"/>
            </StackPanel>
        </Grid>

        <!-- Add Download Section -->
        <Border Grid.Row="1" Classes="input-section" Padding="16" Margin="0,0,0,16">
            <Grid RowDefinitions="Auto,Auto,Auto">
                <TextBlock Grid.Row="0" 
                          Text="📥 Add New Download" 
                          Classes="section-title"
                          FontSize="16" 
                          FontWeight="SemiBold"
                          Foreground="#FFFFFF"
                          Margin="0,0,0,12"/>
                
                <Grid Grid.Row="1" ColumnDefinitions="*,200,Auto,Auto" Margin="0,0,0,12">
                    <TextBox Grid.Column="0" 
                            Watermark="🔗 Paste your video URL here" 
                            Text="{Binding NewUrl, Mode=TwoWay}"
                            FontSize="13"
                            Margin="0,0,8,0"/>
                    <ComboBox Grid.Column="1" 
                             ItemsSource="{Binding Qualities}" 
                             SelectedItem="{Binding NewQuality, Mode=TwoWay}"
                             FontSize="12"
                             Margin="0,0,8,0"/>
                    <Button Grid.Column="2" 
                           Content="➕ Add" 
                           Classes="primary"
                           Command="{Binding AddItemCommand}"
                           IsEnabled="{Binding CanAddItem}"
                           Margin="0,0,8,0"/>
                    <Button Grid.Column="3" 
                           Content="🚀 Start" 
                           Classes="accent"
                           Command="{Binding AddAndStartCommand}"
                           IsEnabled="{Binding CanAddItem}"/>
                </Grid>
                
                <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="💡 Tip:" 
                              Classes="label"
                              FontWeight="SemiBold" 
                              FontSize="12"
                              Foreground="#10B981"/>
                    <TextBlock Text="Select quality before adding - higher quality = larger file size" 
                              Classes="body"
                              FontSize="12"
                              Foreground="#9CA3AF"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Downloads List -->
        <Border Grid.Row="2" Classes="card" Padding="0">
            <Grid RowDefinitions="Auto,*">
                <Border Grid.Row="0" 
                       Background="#2D2D30" 
                       Padding="16,12"
                       CornerRadius="8,8,0,0">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Text="📥 Download Queue" 
                                  Classes="section-title"
                                  FontSize="16" 
                                  FontWeight="SemiBold"
                                  Foreground="#FFFFFF"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ItemsStatusText}"
                                  Classes="caption"
                                  FontSize="12"
                                  Foreground="#9CA3AF"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <Grid Grid.Row="1">
                    <!-- Empty State -->
                    <StackPanel VerticalAlignment="Center" 
                               HorizontalAlignment="Center" 
                               Spacing="16"
                               IsVisible="{Binding HasNoItems}">
                        <TextBlock Text="📥" FontSize="48" HorizontalAlignment="Center" Foreground="#6B7280"/>
                        <TextBlock Text="🎯 Ready to Download" 
                                  Classes="section-title"
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Center"
                                  Foreground="#6B7280"/>
                        <TextBlock Text="Add your first video URL above to get started with professional-grade downloading" 
                                  Classes="body"
                                  FontSize="15" 
                                  HorizontalAlignment="Center"
                                  Foreground="#6B7280"
                                  TextWrapping="Wrap"
                                  MaxWidth="400"/>
                    </StackPanel>
                    
                    <!-- Download List -->
                    <ScrollViewer IsVisible="{Binding HasItems}">
                        <ItemsControl ItemsSource="{Binding Items}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Classes="card" 
                                           Margin="0,0,0,12" 
                                           Padding="20">
                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto,Auto" 
                                             RowDefinitions="Auto,Auto">
                                            
                                            <!-- Index -->
                                            <Border Grid.Column="0" Grid.RowSpan="2"
                                                   Background="#0078D4" 
                                                   CornerRadius="20" 
                                                   Width="40" 
                                                   Height="40"
                                                   Margin="0,0,16,0"
                                                   VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Index}" 
                                                          FontWeight="Bold" 
                                                          Foreground="White"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- Video Info -->
                                            <StackPanel Grid.Column="1" Grid.Row="0" 
                                                       Spacing="4"
                                                       Margin="0,0,16,0">
                                                <TextBlock Text="{Binding Title}" 
                                                          FontWeight="SemiBold" 
                                                          FontSize="14"
                                                          Foreground="#FFFFFF"/>
                                                <TextBlock Text="{Binding Url}" 
                                                          FontSize="12" 
                                                          Foreground="#9CA3AF"
                                                          TextWrapping="NoWrap"
                                                          TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            
                                            <!-- Progress Bar -->
                                            <StackPanel Grid.Column="1" Grid.Row="1" 
                                                       Spacing="4"
                                                       Margin="0,8,16,0">
                                                <Grid ColumnDefinitions="*,Auto">
                                                    <TextBlock Grid.Column="0"
                                                              Text="{Binding SizeText}" 
                                                              FontSize="11" 
                                                              Foreground="#9CA3AF"/>
                                                    <TextBlock Grid.Column="1"
                                                              Text="{Binding Progress, StringFormat='{}{0}%'}" 
                                                              FontSize="11" 
                                                              Foreground="#9CA3AF"/>
                                                </Grid>
                                                <ProgressBar Value="{Binding Progress}" 
                                                            Minimum="0" 
                                                            Maximum="100"
                                                            Height="6"/>
                                            </StackPanel>
                                            
                                            <!-- Quality -->
                                            <Border Grid.Column="2" Grid.RowSpan="2"
                                                   Background="#2D2D30" 
                                                   CornerRadius="6" 
                                                   Padding="8,4"
                                                   Margin="0,0,16,0"
                                                   VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Quality}" 
                                                          FontSize="11" 
                                                          FontWeight="Medium"
                                                          Foreground="#9CA3AF"/>
                                            </Border>
                                            
                                            <!-- Status -->
                                            <Border Grid.Column="3" Grid.RowSpan="2"
                                                   Background="{Binding StatusColor}" 
                                                   CornerRadius="6" 
                                                   Padding="8,4"
                                                   Margin="0,0,16,0"
                                                   VerticalAlignment="Center">
                                                <TextBlock Text="{Binding StatusText}" 
                                                          FontSize="11" 
                                                          FontWeight="Medium"
                                                          Foreground="White"/>
                                            </Border>
                                            
                                            <!-- Actions -->
                                            <StackPanel Grid.Column="4" Grid.RowSpan="2" 
                                                       Orientation="Horizontal" 
                                                       Spacing="8"
                                                       VerticalAlignment="Center">
                                                <Button Content="{Binding StartPauseText}"
                                                       Classes="icon success"
                                                       ToolTip.Tip="{Binding StartPauseTooltip}"
                                                       Command="{Binding DataContext.ToggleItemCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                       CommandParameter="{Binding}"/>
                                                <Button Content="🗑️"
                                                       Classes="icon danger"
                                                       ToolTip.Tip="Remove from queue"
                                                       Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                       CommandParameter="{Binding}"/>
                                                <Button Content="📂"
                                                       Classes="icon primary"
                                                       ToolTip.Tip="Open download folder"
                                                       Command="{Binding DataContext.OpenItemCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                       CommandParameter="{Binding}"
                                                       IsVisible="{Binding IsCompleted}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>

        <!-- Footer -->
        <Grid Grid.Row="3" ColumnDefinitions="*,Auto" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <TextBlock Text="� Download Location:" 
                          Classes="label"
                          VerticalAlignment="Center"
                          FontWeight="Bold"/>
                <TextBox Text="{Binding OutputFolder, Mode=TwoWay}"
                        Width="400"
                        IsReadOnly="True"
                        Background="#2D2D30"/>
                <Button Content="📁 Browse" 
                       Classes="compact"
                       Command="{Binding BrowseFolderCommand}"/>
            </StackPanel>
            
            <TextBlock Grid.Column="1"
                      Text="✨ Crafted with passion for content creators"
                      Classes="caption"
                      FontSize="12"
                      Foreground="#6B7280"
                      VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
