<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:YtDlpGui.AvaloniaApp.ViewModels"
        x:Class="YtDlpGui.AvaloniaApp.MainWindow"
        Title="Video Download Manager - Professional Downloader"
        Width="1200" Height="700"
        MinWidth="900" MinHeight="600"
        Background="#1E1E1E"
        mc:Ignorable="d">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="24">
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,20">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Video Download Manager" 
                          FontSize="28" 
                          FontWeight="Bold"
                          Foreground="#FFFFFF"/>
                <TextBlock Text="Download videos and audio from online platforms" 
                          FontSize="14" 
                          Foreground="#9CA3AF"
                          Margin="0,4,0,0"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <Button Content="⏵ Start All" 
                        Classes="accent"
                        Command="{Binding StartAllCommand}"/>
                <Button Content="⏸ Pause All" 
                        Classes="warning"
                        Command="{Binding PauseAllCommand}"/>
                <Button Content="🗑 Clear Completed" 
                        Command="{Binding ClearCompletedCommand}"/>
            </StackPanel>
        </Grid>

        <!-- Add Download Section -->
        <Border Grid.Row="1" Classes="input-section" Padding="20" Margin="0,0,0,20">
            <Grid RowDefinitions="Auto,Auto,Auto">
                <TextBlock Grid.Row="0" 
                          Text="Add New Download" 
                          FontSize="16" 
                          FontWeight="SemiBold"
                          Foreground="#FFFFFF"
                          Margin="0,0,0,16"/>
                
                <Grid Grid.Row="1" ColumnDefinitions="*,280,Auto,Auto" Margin="0,0,0,12">
                    <TextBox Grid.Column="0" 
                            Watermark="Enter video URL from any supported platform" 
                            Text="{Binding NewUrl, Mode=TwoWay}"
                            FontSize="14"
                            Margin="0,0,12,0"/>
                    <ComboBox Grid.Column="1" 
                             ItemsSource="{Binding Qualities}" 
                             SelectedItem="{Binding NewQuality, Mode=TwoWay}"
                             FontSize="14"
                             Margin="0,0,12,0"/>
                    <Button Grid.Column="2" 
                           Content="Add to Queue" 
                           Command="{Binding AddItemCommand}"
                           IsEnabled="{Binding CanAddItem}"
                           Margin="0,0,12,0"/>
                    <Button Grid.Column="3" 
                           Content="Add &amp; Start" 
                           Classes="accent"
                           Command="{Binding AddAndStartCommand}"
                           IsEnabled="{Binding CanAddItem}"/>
                </Grid>
                
                <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="16">
                    <TextBlock Text="💡 Tip:" FontWeight="Medium" Foreground="#0078D4"/>
                    <TextBlock Text="Choose video quality (4K/1080p/720p/480p/360p) or audio-only formats (MP3/AAC/FLAC)" Foreground="#9CA3AF"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Downloads List -->
        <Border Grid.Row="2" Classes="card" Padding="0">
            <Grid RowDefinitions="Auto,*">
                <Border Grid.Row="0" 
                       Background="#2D2D30" 
                       Padding="20,16"
                       CornerRadius="12,12,0,0">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Text="Download Queue" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Foreground="#FFFFFF"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding ItemsStatusText}"
                                  FontSize="14"
                                  Foreground="#9CA3AF"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <Grid Grid.Row="1">
                    <!-- Empty State -->
                    <StackPanel VerticalAlignment="Center" 
                               HorizontalAlignment="Center" 
                               Spacing="16"
                               IsVisible="{Binding HasNoItems}">
                        <TextBlock Text="📥" FontSize="48" HorizontalAlignment="Center" Foreground="#6B7280"/>
                        <TextBlock Text="No downloads yet" 
                                  FontSize="16" 
                                  FontWeight="Medium" 
                                  HorizontalAlignment="Center"
                                  Foreground="#9CA3AF"/>
                        <TextBlock Text="Add a video URL above to get started" 
                                  FontSize="14" 
                                  HorizontalAlignment="Center"
                                  Foreground="#6B7280"/>
                    </StackPanel>
                    
                    <!-- Download List -->
                    <ScrollViewer IsVisible="{Binding HasItems}">
                        <ItemsControl ItemsSource="{Binding Items}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Classes="card" 
                                           Margin="0,0,0,12" 
                                           Padding="20">
                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto,Auto" 
                                             RowDefinitions="Auto,Auto">
                                            
                                            <!-- Index -->
                                            <Border Grid.Column="0" Grid.RowSpan="2"
                                                   Background="#0078D4" 
                                                   CornerRadius="20" 
                                                   Width="40" 
                                                   Height="40"
                                                   Margin="0,0,16,0"
                                                   VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Index}" 
                                                          FontWeight="Bold" 
                                                          Foreground="White"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- Video Info -->
                                            <StackPanel Grid.Column="1" Grid.Row="0" 
                                                       Spacing="4"
                                                       Margin="0,0,16,0">
                                                <TextBlock Text="{Binding Title}" 
                                                          FontWeight="SemiBold" 
                                                          FontSize="14"
                                                          Foreground="#FFFFFF"/>
                                                <TextBlock Text="{Binding Url}" 
                                                          FontSize="12" 
                                                          Foreground="#9CA3AF"
                                                          TextWrapping="NoWrap"
                                                          TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            
                                            <!-- Progress Bar -->
                                            <StackPanel Grid.Column="1" Grid.Row="1" 
                                                       Spacing="4"
                                                       Margin="0,8,16,0">
                                                <Grid ColumnDefinitions="*,Auto">
                                                    <TextBlock Grid.Column="0"
                                                              Text="{Binding SizeText}" 
                                                              FontSize="11" 
                                                              Foreground="#9CA3AF"/>
                                                    <TextBlock Grid.Column="1"
                                                              Text="{Binding Progress, StringFormat='{}{0}%'}" 
                                                              FontSize="11" 
                                                              Foreground="#9CA3AF"/>
                                                </Grid>
                                                <ProgressBar Value="{Binding Progress}" 
                                                            Minimum="0" 
                                                            Maximum="100"
                                                            Height="6"/>
                                            </StackPanel>
                                            
                                            <!-- Quality -->
                                            <Border Grid.Column="2" Grid.RowSpan="2"
                                                   Background="#2D2D30" 
                                                   CornerRadius="6" 
                                                   Padding="8,4"
                                                   Margin="0,0,16,0"
                                                   VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Quality}" 
                                                          FontSize="11" 
                                                          FontWeight="Medium"
                                                          Foreground="#9CA3AF"/>
                                            </Border>
                                            
                                            <!-- Status -->
                                            <Border Grid.Column="3" Grid.RowSpan="2"
                                                   Background="{Binding StatusColor}" 
                                                   CornerRadius="6" 
                                                   Padding="8,4"
                                                   Margin="0,0,16,0"
                                                   VerticalAlignment="Center">
                                                <TextBlock Text="{Binding StatusText}" 
                                                          FontSize="11" 
                                                          FontWeight="Medium"
                                                          Foreground="White"/>
                                            </Border>
                                            
                                            <!-- Actions -->
                                            <StackPanel Grid.Column="4" Grid.RowSpan="2" 
                                                       Orientation="Horizontal" 
                                                       Spacing="8"
                                                       VerticalAlignment="Center">
                                                <Button Content="{Binding StartPauseText}"
                                                       Classes="small success"
                                                       Command="{Binding DataContext.ToggleItemCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                       CommandParameter="{Binding}"/>
                                                <Button Content="🗑"
                                                       Classes="danger small"
                                                       Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                       CommandParameter="{Binding}"/>
                                                <Button Content="📂"
                                                       Classes="small"
                                                       Command="{Binding DataContext.OpenItemCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                       CommandParameter="{Binding}"
                                                       IsVisible="{Binding IsCompleted}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>

        <!-- Footer -->
        <Grid Grid.Row="3" ColumnDefinitions="*,Auto" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <TextBlock Text="📁 Save to:" 
                          VerticalAlignment="Center"
                          FontWeight="Medium"/>
                <TextBox Text="{Binding OutputFolder, Mode=TwoWay}"
                        Width="400"
                        IsReadOnly="True"
                        Background="#2D2D30"/>
                <Button Content="Browse" 
                       Command="{Binding BrowseFolderCommand}"/>
            </StackPanel>
            
            <TextBlock Grid.Column="1"
                      Text="Made with ❤️ for video enthusiasts"
                      FontSize="12"
                      Foreground="#6B7280"
                      VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
